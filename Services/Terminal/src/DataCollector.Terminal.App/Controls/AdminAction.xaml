<?xml version="1.0" encoding="utf-8" ?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DataCollector.Terminal.App.Controls.AdminAction"
               BackgroundColor="#282828">

    <VerticalStackLayout >
        <Button Text="Message" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200"  HeightRequest="50"  Margin="20" FontSize="Medium" Clicked="OnMessageWorkers"/>
        <Button Text="Kick" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnKikWorker"/>
        <Button Text="Set Role" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="NavigateToAddRpoduct" />
        <Button Text="Cancel" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnCloseAsync" />


    </VerticalStackLayout>

</toolkit:Popup>

