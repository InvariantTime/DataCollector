<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DataCollector.Terminal.App.Controls.MessageForm"
               BackgroundColor="#282828">

    <VerticalStackLayout >

        <HorizontalStackLayout HorizontalOptions ="Center" Padding="20" >
            <Label Text="Message" TextColor="{StaticResource Key=textColor}" Margin="10" HorizontalOptions="Center"  />
            <Entry MinimumWidthRequest="300" TextColor="{StaticResource Key=textColor}"/>
        </HorizontalStackLayout>

        <Button Text="Send" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnSendMessageWorkers" />
        <Button Text="Cancel" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnCloseAsync" />


    </VerticalStackLayout>

</toolkit:Popup>

