<?xml version="1.0" encoding="utf-8" ?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DataCollector.Terminal.App.Controls.MessageWindow"
               CanBeDismissedByTappingOutsideOfPopup="True"
               Margin="0"
               Padding="3"
               BackgroundColor="#282828"
               >

    <Border Stroke="Red" 
            StrokeThickness="3" 
            StrokeShape="RoundRectangle 20"
            Background="Transparent">

        <VerticalStackLayout >
            <Label  TextColor="{StaticResource Key=textColor}" Margin="10" x:Name="_labelError" x:FieldModifier="private" />

            <Label  TextColor="{StaticResource Key=textColor}" Margin="10" x:Name="_labelDiscription" x:FieldModifier="private" />

            <Button Text="Закрыть" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnCloseAsync" BorderColor="#7C3AED"/>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
    
    
