            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                    <x:String>Hello</x:String>
                </x:Array>
            </CollectionView.ItemsSource>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="Hello"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </VerticalStackLayout>
</ContentView>