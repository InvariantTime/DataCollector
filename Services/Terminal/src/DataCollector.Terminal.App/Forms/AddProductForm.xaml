<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="DataCollector.Terminal.App.Forms.AddProductForm"
             BackgroundColor="Transparent">
    <VerticalStackLayout>
        <Label Margin="10" x:Name="_title" x:FieldModifier="private"/>

        <Label Text="Name" Margin="10" HorizontalOptions="Center"/>
        <Entry MinimumWidthRequest="300" x:Name="_nameTextbox" x:FieldModifier="private"/>

        <Label Text="Description" Margin="10"/>
        <Entry  MinimumWidthRequest="300" x:Name="_descriptionTextbox" x:FieldModifier="private"/>

        <Button Text="Add" Margin="20" Clicked="OnAddProduct"/>
        <Button Text="Cancel" Clicked="OnCloseAsync"/>

    </VerticalStackLayout>
</ContentView>