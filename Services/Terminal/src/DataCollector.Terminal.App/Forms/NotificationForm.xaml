<?xml version="1.0" encoding="utf-8" ?>

<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:DataCollector.Terminal.App.Forms"
               x:Class="DataCollector.Terminal.App.Forms.NotificationForm"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <Border Stroke="Red" 
            StrokeThickness="3" 
            StrokeShape="RoundRectangle 20"
            Background="Transparent">

        <VerticalStackLayout >
            <Label Margin="10" x:Name="_title" x:FieldModifier="private" />

            <Label Margin="10" x:Name="_description" x:FieldModifier="private" />

            <Button Text="Ok" Clicked="OnCloseAsync"/>

        </VerticalStackLayout>
    </Border>
</toolkit:Popup>
    
    
