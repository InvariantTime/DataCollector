<?xml version="1.0" encoding="utf-8" ?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="DataCollector.Terminal.App.Forms.NotificationForm" BackgroundColor="Transparent">
    <VerticalStackLayout>
        <Label Margin="20" FontSize="Header" HorizontalOptions="Center"
               x:Name="_title" x:FieldModifier="private" />

        <ScrollView MaximumWidthRequest="300" Margin="0 0 30 0" Padding="5" MinimumHeightRequest="150"
                    MaximumHeightRequest="250" BackgroundColor="#202024" Shadow="Transparent 0 0">
            
            <Label FontSize="Medium"
                x:Name="_description" x:FieldModifier="private" />
        </ScrollView>

        <Button Text="Ok" Clicked="OnCloseAsync"/>
    </VerticalStackLayout>
</ContentView>