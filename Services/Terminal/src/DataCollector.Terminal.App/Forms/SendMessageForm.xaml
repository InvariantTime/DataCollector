<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="DataCollector.Terminal.App.Forms.SendMessageForm"
               BackgroundColor="#282828">

    <VerticalStackLayout >

        <HorizontalStackLayout HorizontalOptions ="Center" Padding="20" >
            <Label Text="Message" Margin="10" HorizontalOptions="Center"  />
            <Entry MinimumWidthRequest="300"/>
        </HorizontalStackLayout>

        <Button Text="Send" Clicked="OnSendMessageWorkers" />
        <Button Text="Cancel" Margin="20" Clicked="OnCloseAsync" />


    </VerticalStackLayout>

</toolkit:Popup>

