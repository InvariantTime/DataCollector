<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="DataCollector.Terminal.App.Forms.SendMessageForm" 
             BackgroundColor="Transparent">

    <VerticalStackLayout >
        <HorizontalStackLayout HorizontalOptions ="Center" Padding="20" >
            <Label Text="Message" Margin="10" HorizontalOptions="Center"  />
            <Entry MinimumWidthRequest="300"/>
        </HorizontalStackLayout>

        <Button Text="Send" Clicked="OnSendMessageWorkers" />
        <Button Text="Cancel" Margin="20" Clicked="OnCloseAsync" />
    </VerticalStackLayout>

</ContentView>

