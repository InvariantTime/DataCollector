<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls ="clr-namespace:DataCollector.Terminal.App.Controls"
             x:Class="DataCollector.Terminal.App.Pages.AddProductPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <controls:Scanner Grid.Row="0" x:Name="_scanner" x:FieldModifier="private"/>

        <VerticalStackLayout Grid.Row="1">
            <Button Text="Add..." Margin="10" WidthRequest="200" 
                    Command="{Binding AddProductCommand}" CommandParameter="{Binding Source={Reference Name=_scanner}, Path=Barcode}"
                    IsEnabled="{Binding Source={Reference Name=_scanner}, Path=IsDetected}"/>
            
            <Button Text="Back" WidthRequest="200" Command="{Binding NavigateBackCommand}"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage> 