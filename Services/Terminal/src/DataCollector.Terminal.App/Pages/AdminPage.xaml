<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:DataCollector.Terminal.App.Controls"
             x:Class="DataCollector.Terminal.App.Pages.AdminPage"
             Title="AdminPage">

    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Label Text="User list" HorizontalOptions="Center" FontSize="Medium" Margin="15"/>

        <Border>

            <controls:UsersList HorizontalOptions="Center" MinimumHeightRequest="300"
                            MaximumHeightRequest="400" MinimumWidthRequest="300"
                            MaximumWidthRequest="400" Margin="40" Users="{Binding Users}"/>

        </Border>

        <HorizontalStackLayout HorizontalOptions="Center" >
            <Button Text="Kick" WidthRequest="120" 
         HeightRequest="40" FontSize="Medium" MinimumWidthRequest="120" />

            <Button Text="Message" WidthRequest="120" 
         HeightRequest="40" FontSize="Medium"  MinimumWidthRequest="120" Margin="10" />

            <Button Text="Set Role" WidthRequest="120" 
         HeightRequest="40" FontSize="Medium"  MinimumWidthRequest="120" />

        </HorizontalStackLayout>
        
        <Button Text="Back" WidthRequest="200" 
                HeightRequest="50" FontSize="Medium" Margin="20"
                Command="{Binding BackCommand}"/>
            


    </VerticalStackLayout>

</ContentPage> 