<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:DataCollector.Terminal.App.Controls"
             x:Class="DataCollector.Terminal.App.Pages.AdminPage"
             Title="AdminPage">

    <VerticalStackLayout>

        <Label Text="User list" HorizontalOptions="Center" FontSize="Medium" Margin="20 0 10 0"/>

        <controls:UsersList HorizontalOptions="Center" MaximumHeightRequest="400"
                            MaximumWidthRequest="400" Margin="0 0 40 0"/>

        <Button Text="Back" WidthRequest="200" 
                HeightRequest="50" FontSize="Medium" Clicked="OnAdminAction"/>
    </VerticalStackLayout>

</ContentPage> 