<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCollector.Terminal.App.Pages.PickPage"
             Title="PickPage">
    
    <VerticalStackLayout BackgroundColor="#282828">

        <Button Text="Scanning" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200"  HeightRequest="50"  Margin="20" FontSize="Medium" Clicked="NavigateToScanning"/>
        <Button Text="Add Product..." BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="NavigateToAddRpoduct" />
        <Button Text="Admin Page" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="NavigateToAdminPage"/>

    </VerticalStackLayout>
</ContentPage>