<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCollector.Terminal.App.Pages.Registration"
             Title="Registration">





    <StackLayout BackgroundColor="#282828">
        <Label Text="Login" HorizontalOptions="Center" TextColor="{StaticResource Key=textColor}" FontSize="Large" Margin="30"/>

        <HorizontalStackLayout HorizontalOptions ="Center" Padding="20" >
            <Label Text="Email" TextColor="{StaticResource Key=textColor}" Margin="10" HorizontalOptions="Center"  />
            <Entry MinimumWidthRequest="300" TextColor="{StaticResource Key=textColor}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Label Text="Password" TextColor="{StaticResource Key=textColor}" Margin="10" />
            <Entry  MinimumWidthRequest="300" TextColor="{StaticResource Key=textColor}"/>
        </HorizontalStackLayout>


        <Button Text="Submit" BackgroundColor="{StaticResource Key=backColor}" TextColor="{StaticResource Key=textColor}" WidthRequest="200" HeightRequest="50" Margin="20" FontSize="Medium" Clicked="OnSubMit" />



    </StackLayout>
</ContentPage>